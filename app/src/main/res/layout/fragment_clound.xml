<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_clound">


    <ImageView
            android:id="@+id/clound_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_clould"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"/>

    <ImageView
            android:id="@+id/clound_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/clound_1"
            android:src="@drawable/ic_clould"
           android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"/>

    <ImageView
            android:id="@+id/clound_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/clound_2"
            android:src="@drawable/ic_clould"
            android:layout_marginLeft="-30dp"/>

    <ImageView
            android:id="@+id/clound_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/clound_3"
            android:src="@drawable/ic_clould"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-30dp"
            android:layout_marginTop="20dp"/>

    <ImageView
            android:id="@+id/clound_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/clound_4"
            android:src="@drawable/ic_clould"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            />

    <ImageView
            android:id="@+id/clound_6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_clould"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="50dp"
            />


</RelativeLayout>